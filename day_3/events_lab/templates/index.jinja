{% extends 'base.jinja' %}
{% block content %}
    <h1>{{ title }}</h1>
    <form class= "events_form" action="/events" method="post">
        <label for="name">Event Name</label>
        <input type="text" id="name" name="name" placeholder="Enter event name here">

        <label for="date">Date</label>
        <input type="date" name="date" id="date">

        <label for="location">Location</label>
        <input type="text" in="location" name="location" placeholder="Enter location here">

        <label for="num_of_guests">Number of Guests</label>
        <input type="number" id="num_of_guests" name="num_of_guests" placeholder="Enter the number of guests here">

        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10" placeholder="PLease provide a description of the event"></textarea>

        <input type="submit" value="Save">
        </form>

        <table class = "table">
        <tr>
        <th class = "table__header">Name</th>
        <th class = "table__header">Location</th>
        <th class = "table__header">Date</th>
        <th class = "table__header">Number of Guests</th>
        <th class = "table__header">Description</th>
        </tr>
        

    {% for event in event_list %}
        <tr>
         <td>{{ event.name }}</td>
         <td>{{ event.location }}</td>
         <td>{{ event.date }}</td>
         <td>{{ event.number_of_guests }}</td>
         <td>{{ event.description }}</td>
        </tr>
    
    {% endfor %}
        </table>

{% endblock content %}