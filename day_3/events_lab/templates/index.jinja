{% extends 'base.jinja' %}
{% block content %}
    <h1>{{ title }}</h1>
    <ul>
    <form action="/events" method="post">
        <label for="name">Event Name</label>
        <input type="text" id="name" name="name">

        <label for="date">Date</label>
        <input type="date" name="date" id="date">

        <label for="location">Location</label>
        <input type="text" in="location" name="location">

        <label for="num_of_guests">Number of Guests</label>
        <input type="number" id="num_of_guests" name="num_of_guests">

        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10"></textarea>

        <input type="submit" value="Save">
        </form>
    {% for event in event_list %}
        <li>{{ event.name }} <b>{{ event.location }}</b> {{ event.date }} <b>{{ event.number_of_guests }}</b></li>
    
    {% endfor %}
    </ul>
    
        
    {% endif %}

{% endblock content %}